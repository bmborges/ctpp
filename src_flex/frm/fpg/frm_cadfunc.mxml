						txtid_funcao.txt_id.text = dg_localtrabalho.selectedItem.id_funcao;
						retorno =  util.selecionarCombobox(dg_localtrabalho.selectedItem.id_funcao,ArrayFuncao);
						txtid_funcao.txt_nome.text = retorno.label;
						
						
